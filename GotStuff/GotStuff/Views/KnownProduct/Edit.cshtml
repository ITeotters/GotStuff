@model GotStuff.ViewModels.KnownProductVm

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KnownProductId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                @*<span asp-validation-for="Name" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="DefaultShelfLife" class="control-label"></label>
                <input asp-for="DefaultShelfLife" class="form-control" />
                <span asp-validation-for="DefaultShelfLife" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (ViewBag.Message == "Exist")
                {
                    <br /><span style="color:red;">Name already exist.</span>
                }
                <br /><br /><input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>

                                             
